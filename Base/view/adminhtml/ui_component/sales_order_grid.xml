<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="zigzag_labels">
                <settings>
                    <url path="zigzag/order/label/"/>
                    <type>zigzag_labels</type>
                    <label translate="true">Print ZigZag Shipment Labels</label>
                </settings>
            </action>
            <action name="zigzag_shipments">
                <settings>
                    <url path="zigzag/order/ship/"/>
                    <type>zigzag_shipments</type>
                    <label translate="true">Send Orders To ZigZag</label>
                    <confirm>
                        <title translate="true">Please Confirm</title>
                        <message translate="true">Order Submission to ZigZag Can Take up to 10 sec per order. Please avoid large submissions to prevent timeout errors in your browser</message>
                    </confirm>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>